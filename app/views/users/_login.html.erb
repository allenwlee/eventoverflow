<ul>
  <%= form_tag session_create_path, :method => :post do %>
    <% if @login_error %>
      <p>
        <%= @login_error %>
      </p>
    <% end %>
    
    <li>
      <%= label_tag 'name' %>:<br/>
      <%= text_field_tag 'username', nil, {:required => true} %>
    </li>
    <li>
      <%= label_tag 'password' %>:<br/>
      <%= password_field_tag 'password', nil, {:required => true} %>
    </li>
    <li>
      <%= submit_tag 'Login' %>
    </li>
  <% end %>
</ul>
